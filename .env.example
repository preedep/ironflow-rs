# IronFlow-Rs Configuration Example
# Copy this file to .env and update with your actual values

# Worker Configuration
IRONFLOW_WORKER_ID=worker-001
IRONFLOW_WORKER__CONCURRENCY=4
IRONFLOW_WORKER__RECEIVE_TIMEOUT_SECS=30
IRONFLOW_WORKER__MAX_TASK_TIMEOUT_SECS=3600
IRONFLOW_WORKER__SHUTDOWN_TIMEOUT_SECS=30
IRONFLOW_WORKER__HEALTH_CHECK_INTERVAL_SECS=60

# Application Information
IRONFLOW_APP__ID=ironflow-rs
IRONFLOW_APP__VERSION=0.1.0
IRONFLOW_APP__ADDRESS=
IRONFLOW_APP__GEO_LOCATION=us-east-1

# Queue Configuration - Redis
IRONFLOW_QUEUE__TYPE=redis
IRONFLOW_QUEUE__URL=redis://localhost:6379
IRONFLOW_QUEUE__TASK_QUEUE=ironflow:tasks
IRONFLOW_QUEUE__RESULT_QUEUE=ironflow:results
IRONFLOW_QUEUE__MAX_CONNECTIONS=10

# Queue Configuration - RabbitMQ (alternative to Redis)
# IRONFLOW_QUEUE__TYPE=rabbitmq
# IRONFLOW_QUEUE__URL=amqp://localhost:5672
# IRONFLOW_QUEUE__TASK_QUEUE=ironflow.tasks
# IRONFLOW_QUEUE__RESULT_QUEUE=ironflow.results
# IRONFLOW_QUEUE__EXCHANGE=ironflow
# IRONFLOW_QUEUE__PREFETCH_COUNT=10

# Secret Management - HashiCorp Vault
IRONFLOW_SECRETS__TYPE=hashicorp_vault
IRONFLOW_SECRETS__URL=http://localhost:8200
IRONFLOW_SECRETS__TOKEN=your-vault-token-here
IRONFLOW_SECRETS__NAMESPACE=
IRONFLOW_SECRETS__MOUNT_PATH=secret

# Secret Management - AWS Secrets Manager (alternative)
# IRONFLOW_SECRETS__TYPE=aws_secrets_manager
# IRONFLOW_SECRETS__REGION=us-east-1
# IRONFLOW_SECRETS__PREFIX=ironflow/

# Secret Management - Azure Key Vault (alternative)
# IRONFLOW_SECRETS__TYPE=azure_key_vault
# IRONFLOW_SECRETS__VAULT_URL=https://your-vault.vault.azure.net
# IRONFLOW_SECRETS__TENANT_ID=your-tenant-id
# IRONFLOW_SECRETS__CLIENT_ID=your-client-id
# IRONFLOW_SECRETS__CLIENT_SECRET=your-client-secret

# Secret Management - None (disable secret management)
# IRONFLOW_SECRETS__TYPE=none

# Logging Configuration
IRONFLOW_LOGGING__LEVEL=info
IRONFLOW_LOGGING__FORMAT=json
IRONFLOW_LOGGING__SERVICE_ID=ironflow-worker
IRONFLOW_LOGGING__SERVICE_VERSION=0.1.0
IRONFLOW_LOGGING__SERVICE_POD_NAME=

# AWS Credentials (if using AWS services)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_REGION=us-east-1

# Azure Credentials (if using Azure services)
# AZURE_TENANT_ID=your-tenant-id
# AZURE_CLIENT_ID=your-client-id
# AZURE_CLIENT_SECRET=your-client-secret
